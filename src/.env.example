# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eklavya
DB_USER=eklavya
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Model Configuration
DEFAULT_MODEL=claude-sonnet-4-20250514

# Agent Limits
MAX_CONCURRENT_AGENTS=10
CHECKPOINT_INTERVAL_MS=900000
HEARTBEAT_INTERVAL_MS=30000
HEARTBEAT_TIMEOUT_MS=120000

# Security - JWT Configuration (REQUIRED for production)
# Generate with: openssl rand -hex 64
JWT_SECRET=your_jwt_secret_minimum_64_characters_long_for_security
JWT_REFRESH_SECRET=your_refresh_secret_minimum_64_characters_long_for_security
ACCESS_TOKEN_EXPIRY_SECONDS=3600
REFRESH_TOKEN_EXPIRY_SECONDS=604800

# Security - CORS Configuration
# Comma-separated list of allowed origins
# Example: http://localhost:3000,https://app.example.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# Security - Rate Limiting
# Set to 'true' to disable rate limiting (development only)
RATE_LIMIT_DISABLED=false

# Security - Authentication
# Set to 'true' to disable authentication (development only)
AUTH_DISABLED=false

# Security - CORS (development)
# Set to 'true' to allow all origins (development only)
CORS_ALLOW_ALL=false

# Security - Request Body Limits
MAX_BODY_SIZE=1048576

# Environment
NODE_ENV=development
