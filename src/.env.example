# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eklavya
DB_USER=eklavya
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Model Configuration
DEFAULT_MODEL=claude-sonnet-4-20250514

# Agent Limits
MAX_CONCURRENT_AGENTS=10
CHECKPOINT_INTERVAL_MS=900000
HEARTBEAT_INTERVAL_MS=30000
HEARTBEAT_TIMEOUT_MS=120000

# Security - JWT Configuration (REQUIRED for production)
# Generate with: openssl rand -hex 64
JWT_SECRET=your_jwt_secret_minimum_64_characters_long_for_security
JWT_REFRESH_SECRET=your_refresh_secret_minimum_64_characters_long_for_security
ACCESS_TOKEN_EXPIRY_SECONDS=3600
REFRESH_TOKEN_EXPIRY_SECONDS=604800

# Security - CORS Configuration
# Comma-separated list of allowed origins
# Example: http://localhost:3000,https://app.example.com
# Supports wildcards: *.example.com matches any subdomain
CORS_ORIGINS=http://localhost:3000,http://localhost:4000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# Security - Rate Limiting
# Set to 'true' to disable rate limiting (development only)
RATE_LIMIT_DISABLED=false
# Default rate limits (per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
# Authentication endpoints (stricter)
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5
# Write operations
RATE_LIMIT_WRITE_WINDOW_MS=60000
RATE_LIMIT_WRITE_MAX_REQUESTS=30
# Heavy operations (spawn agents, build demos)
RATE_LIMIT_HEAVY_WINDOW_MS=60000
RATE_LIMIT_HEAVY_MAX_REQUESTS=10
# Read operations (more lenient)
RATE_LIMIT_READ_WINDOW_MS=60000
RATE_LIMIT_READ_MAX_REQUESTS=200
# Sensitive operations
RATE_LIMIT_SENSITIVE_WINDOW_MS=3600000
RATE_LIMIT_SENSITIVE_MAX_REQUESTS=3
# Bypass rate limiting for specific IPs (comma-separated)
RATE_LIMIT_BYPASS_IPS=

# Security - Authentication
# Set to 'true' to disable authentication (development only)
AUTH_DISABLED=false
# Admin credentials for env-based auth (development fallback)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here
# Max login attempts before lockout
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MS=900000

# Security - CORS (development)
# Set to 'true' to allow all origins (development only)
CORS_ALLOW_ALL=false
# Set to 'false' to allow CORS errors on client side instead of rejecting
CORS_STRICT_MODE=true
# Enable CORS debug logging
CORS_DEBUG=false

# Security - Request Body Limits
MAX_BODY_SIZE=1048576

# Security - Authorization
# Cache TTL for ownership checks (ms)
OWNERSHIP_CACHE_TTL_MS=60000
# Max audit log entries in memory
MAX_AUDIT_ENTRIES=10000
# Enable verbose authorization logging
AUTH_VERBOSE_LOGGING=false

# Environment
NODE_ENV=development
